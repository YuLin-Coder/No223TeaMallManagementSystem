	<!--根据cid查询所属的所有的茶叶 -->
	<select id="findProductByCid" parameterType="int" resultMap="BaseResultMap">
		select p.* from product p ,category c,categorysecond cs where p.csid=cs.csid
		and cs.cid=c.cid and c.cid= #{0}
		limit #{1},#{2}
	</select>
	<!-- 根据cid查询茶叶的总数 -->
